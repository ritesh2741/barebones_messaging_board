  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, rows: 8, class: 'form-control' %>
    </p>
    <br>
    <%= f.submit "Save Comment", class: 'btn btn-success' %>
  <%end%>

